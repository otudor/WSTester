<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane fx:id="rootMongoStep" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wstester.testFactory.MongoStepController">
   <children>
      <GridPane fx:id="gridMongoStep" hgap="10" vgap="10">
                
          <children>
              <Label text="Step Name:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
              <Label fx:id="lblName" prefWidth="100.0" GridPane.columnIndex="1" />
              <Label text="Mongo collection:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
              <Label fx:id="mongoCollection" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
              
              <Label text="Status:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
              <Label fx:id="lblStatus" prefWidth="50" GridPane.columnIndex="1" GridPane.rowIndex="4" />
              
              <Label text="Response:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
              <Label fx:id="lblResponse" GridPane.columnIndex="1" GridPane.rowIndex="5" />
              <TableView fx:id="tblExecutions" GridPane.columnSpan="2" GridPane.rowIndex="8">
      		     <columns>
      		          <TableColumn fx:id="columnDate" text="Date">
		          </TableColumn>
      		          <TableColumn fx:id="columnStatus" text="Status">
		          </TableColumn>
      		          <TableColumn fx:id="columnResponse" text="Response">
		          </TableColumn>
      		     </columns>
               <GridPane.margin>
                  <Insets left="5.0" right="5.0" />
               </GridPane.margin>
      		</TableView>
            <Label text="Mongo Action:" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
            <Label text="Mongo query:" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
            <Label fx:id="mongoAction" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label fx:id="mongoQuery" GridPane.columnIndex="1" GridPane.rowIndex="3" />
              
                    <Label text="Past executions" GridPane.halignment="RIGHT" GridPane.rowIndex="6" />
            <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#saveMongo" text="Save" textAlignment="CENTER" GridPane.rowIndex="7" />
          </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints minHeight="-Infinity" prefHeight="17.0" />
            <RowConstraints />
            <RowConstraints minHeight="-Infinity" prefHeight="17.0" />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints />
         </rowConstraints>
      </GridPane>
   </children>
   <padding>
      <Insets left="10.0" right="10.0" />
   </padding>
</Pane>
