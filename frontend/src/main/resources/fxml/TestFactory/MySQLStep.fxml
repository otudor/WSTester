<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="rootMySQLStep"
          hgap="10" vgap="10"
          fx:controller="com.wstester.testFactory.MySQLStepController"
          xmlns:fx="http://javafx.com/fxml">
          
    <children>
        <Label text="Test Step Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="SQL" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtSQL" GridPane.rowIndex = "1" GridPane.columnIndex="1"/>
        
        <Label text="Status:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextField fx:id="txtStatus" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="30"/>
        
        <Label text="Response:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtResponse" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        
    </children>
</GridPane>