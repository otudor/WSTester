<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="rootMySQLStep"
          hgap="10" vgap="10"
          fx:controller="com.wstester.testFactory.MySQLStepController"
          xmlns:fx="http://javafx.com/fxml">
          
    <children>
        <Label text="Step Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="lblName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="SQL" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="lblSQL" GridPane.rowIndex = "1" GridPane.columnIndex="1"/>
        
        <Label text="Status:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <Label fx:id="lblStatus" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="50"/>
        
        <Label text="Response:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label fx:id="lblResponse" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        
    </children>
</GridPane>