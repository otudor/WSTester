<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TabPane fx:id="rootMySQLStep" prefHeight="400.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wstester.testFactory.MySQLStepController">
   <tabs>
      <Tab text="SQL Definition">
         <content>
            <AnchorPane>
               <children>
                  <GridPane fx:id="gridPane" hgap="10" prefHeight="180.0" vgap="10" AnchorPane.bottomAnchor="180.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="20.0">
                            
                      <children>
                          <Label text="Step Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                          <Label text="SQL" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                          
                          <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                          
                          <Label text="Response:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField fx:id="sqlField" maxHeight="25.0" minHeight="25.0" minWidth="17.0" prefHeight="25.0" prefWidth="570.0" promptText="Name of SQL" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <TextField fx:id="stepName" maxHeight="25.0" minHeight="25.0" minWidth="20.0" prefHeight="25.0" prefWidth="570.0" promptText="The Name of the Step" GridPane.columnIndex="1" />
                        <Label fx:id="sqlStatus" maxHeight="25.0" maxWidth="570.0" prefHeight="25.0" prefWidth="570.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label fx:id="sqlResponse" maxHeight="25.0" maxWidth="570.0" prefHeight="25.0" prefWidth="570.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Button fx:id="cellButton" maxHeight="25.0" maxWidth="80.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="80.0" text="Details" GridPane.rowIndex="5">
                           <GridPane.margin>
                              <Insets left="20.0" />
                           </GridPane.margin></Button>
                        <Button fx:id="saveBtn" mnemonicParsing="false" onAction="#saveMySQL" text="Save" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="5">
                           <GridPane.margin>
                              <Insets right="20.0" />
                           </GridPane.margin>
                        </Button>
                      </children>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                     <columnConstraints>
                        <ColumnConstraints maxWidth="120.0" minWidth="120.0" prefWidth="120.0" />
                        <ColumnConstraints maxWidth="570.0" minWidth="570.0" prefWidth="570.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints maxHeight="25.0" minHeight="17.0" prefHeight="25.0" />
                        <RowConstraints maxHeight="25.0" minHeight="10.0" prefHeight="25.0" />
                        <RowConstraints maxHeight="25.0" prefHeight="25.0" />
                        <RowConstraints maxHeight="25.0" prefHeight="25.0" />
                        <RowConstraints />
                        <RowConstraints maxHeight="25.0" minHeight="10.0" prefHeight="25.0" />
                     </rowConstraints>
                  </GridPane>
               </children>
            </AnchorPane>
         </content>
      </Tab>
      <Tab text="Past Executions">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
               <children>
                    <TableView fx:id="tblExecutions" maxWidth="450.0" prefHeight="400.0" prefWidth="450.0">
            		     <columns>
            		          <TableColumn fx:id="columnDate" prefWidth="200.0" text="Date">
		          </TableColumn>
            		          <TableColumn fx:id="columnStatus" prefWidth="100.0" text="Status">
		          </TableColumn>
            		     </columns>
            		</TableView>
               </children>
            </AnchorPane>
        </content>
      </Tab>
      <Tab text="Variables">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
               <children>
                  <TreeTableView layoutX="6.0" layoutY="7.0" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TreeTableColumn prefWidth="75.0" text="C1" />
                      <TreeTableColumn prefWidth="75.0" text="C2" />
                    </columns>
                  </TreeTableView>
               </children>
            </AnchorPane>
        </content>
      </Tab>
   </tabs>
</TabPane>
