<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wstester.testFactory.SoapStepController">
   <children>
      <GridPane fx:id="rootSoapStep" hgap="10" vgap="10">
                
          <children>
              <Label text="Step Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
              <Label fx:id="lblName" GridPane.columnIndex="1" GridPane.rowIndex="0" />
              <Label text="Request" GridPane.columnIndex="0" GridPane.rowIndex="1" />
              <Label fx:id="soapRequest" GridPane.columnIndex="1" GridPane.rowIndex="1" />
              
              <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
              <Label fx:id="lblStatus" prefWidth="50" GridPane.columnIndex="1" GridPane.rowIndex="2" />
              
              <Label text="Response:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
              <Label fx:id="lblResponse" GridPane.columnIndex="1" GridPane.rowIndex="3" />
              
              <Label text="Past executions" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4" />
              <TableView fx:id="tblExecutions" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5">
      		     <columns>
      		          <TableColumn fx:id="columnDate" text="Date">
		          </TableColumn>
      		          <TableColumn fx:id="columnStatus" text="Status">
		          </TableColumn>
      		          <TableColumn fx:id="columnResponse" text="Response">
		          </TableColumn>
      		     </columns>
               <GridPane.margin>
                  <Insets left="5.0" right="5.0" />
               </GridPane.margin>
      		</TableView>
          </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
      </GridPane>
   </children>
   <padding>
      <Insets left="10.0" right="10.0" />
   </padding>
</Pane>
