<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="rootEnvDetails"
          hgap="10" vgap="10"
          fx:controller="com.wstester.EnvironmentDetailPresenter"
          xmlns:fx="http://javafx.com/fxml">

    <children>
        <Label text="Environment name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="envNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Environment IP" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="envIPField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </children>
</GridPane>